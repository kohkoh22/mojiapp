.mypage
  .mypage__profile
    .mypage__profile--image
      -if @user.image.url
        =image_tag @user.image.url, class: 'userimage', size: "130x130"
    .mypage__profile--name
      =@user.nickname
    -if user_signed_in? && @user == current_user
      .mypage__profile--edit
        = link_to "編集", edit_user_path(current_user)
    .mypage__profile--contents
      .number-of-posts
        =@user.posts.count
        %br/
        投稿数
      .follower
        = link_to following_user_path(@user) do
          =@user.followed.count
          %br/
          フォロワー
      .followed
        =link_to followers_user_path(@user) do
          =@user.follower.count
          %br/
          フォロー
  .mypage__more
    -unless @user == current_user
      -if current_user.following?(@user)
        = link_to 'フォロー外す', unfollow_path(@user.id), method: :POST
      -else
        = link_to 'フォローする', follow_path(@user.id), method: :POST
  .mypage__posts
    投稿
    .index
      -@user.posts.each do |post|
        .index-box
          =link_to post_path(post.id) do
            .index-image
              .mypage__contents--image
                =image_tag post.image.url, class: 'vocabimage', size: "250x250"
            .index-contents
              .index-contents__vocab
                =post.vocab
              .index-contents__definition
                =post.definition
              .index-contents__like
                =post.liked_users.count
              .index-contents__time
                =post.created_at.strftime("%Y年%m月%d日 %H時%M分")
        
