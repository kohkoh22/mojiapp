.register
  .register__title
    %i.fas.fa-user.fa-2x
    %h3 ログイン
  = form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f|
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email"
    .field
      = f.label :password
      %br/
      = f.password_field :password, autocomplete: "current-password"
    - if devise_mapping.rememberable?
      .field-remember
        = f.check_box :remember_me
        = f.label :remember_me
    .field
      = f.submit "ログイン", class:"submitbtn"
    .field
      .field__facebook
        = link_to 'Facebookでログイン', user_facebook_omniauth_authorize_path, method: :post
      .field__google
        = link_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path, method: :post
    .field
      = render "devise/shared/links"

