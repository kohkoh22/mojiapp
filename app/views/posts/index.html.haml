%p  みんなの文字
.index
  -@post.each do |post|
    .index-box
      =link_to post_path(post.id) do
        .index-image
          =image_tag post.image.url, class: 'vocabimage', size: "250x250" 
        .index-contents
          .index-contents__vocab
            =post.vocab
          .index-contents__definition
            意味:
            =post.definition
          .index-contents__like
            =post.liked_users.count
          .index-contents__time
            =post.created_at.strftime("%Y年%m月%d日 %H時%M分")
  = paginate @post

.impression-box
  %p 閲覧数順ランキング
  .impression-ranking
    - @posts.each.with_index(1) do |post, index|
      .impression
        =link_to post_path(post.id) do
          .impression__index
            = index
            位
          .impression__image
            =image_tag post.image.url, class: 'vocabimage', size: "250x250"
          .impression__contents
            .impression__contents--vocab
              =post.vocab
            .impression__contents--definition
              =post.definition
            .impression__contents--numbers
              閲覧数
              =post.impressions_count
            .impression__contents--time
              =post.created_at.strftime("%Y年%m月%d日 %H時%M分")
.impression-box
  %p いいね数ランキング
